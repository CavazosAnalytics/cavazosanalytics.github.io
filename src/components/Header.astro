---
const links = [
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/blog', label: 'Blog' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---
<header class="bg-[var(--bg)]/80 backdrop-blur sticky top-0 z-50 border-b border-white/5">
  <div class="container max-w-6xl px-4 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/favicon.svg" alt="Cavazos Analytics" class="w-8 h-8" />
      <span class="font-semibold">Cavazos Analytics</span>
    </a>
    <nav class="hidden md:flex items-center gap-6">
      {links.map(l => <a href={l.href} class="text-[var(--muted)] hover:text-[var(--ink)]">{l.label}</a>)}
      <a href="/contact" class="px-4 py-2 rounded-xl bg-blue-into text-white">Book consult</a>
    </nav>
  </div>
</header>
