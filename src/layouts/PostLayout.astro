---
const { frontmatter } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{frontmatter.title} — Cavazos Analytics</title>
    <meta name="description" content={frontmatter.description} />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-[var(--bg)] text-[var(--ink)]">
    <div class="container max-w-3xl px-4 py-10 prose prose-invert">
      <a href="/blog" class="text-[var(--muted)]">← Back to Blog</a>
      <h1 class="mb-2">{frontmatter.title}</h1>
      <p class="-mt-4 text-sm text-[var(--muted)]">{frontmatter.date}</p>
      <slot />
    </div>
  </body>
</html>
