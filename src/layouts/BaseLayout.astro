---
const { title = 'Cavazos Analytics', description = 'Investigative blockchain analytics & market intelligence.' } = Astro.props;
---
<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />
    <meta name="theme-color" content="#061829" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-[var(--bg)] text-[var(--ink)]">
    <slot name="header" />
    <main class="container max-w-6xl px-4"> <slot /> </main>
    <slot name="footer" />
  </body>
</html>
