---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CTA from "../components/CTA.astro";
import SocialBar from "../components/SocialBar.astro";
---
<BaseLayout title="Cavazos Analytics — Data. Markets. Insight." description="Investigative blockchain analytics & market intelligence for high‑stakes decisions.">
  <Fragment slot="header"><Header /></Fragment>
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h1 class="text-4xl md:text-6xl font-semibold tracking-tight">Data. Markets. Insight.</h1>
    <p class="mt-4 max-w-2xl text-[var(--muted)]">We trace complex on‑chain flows, build market intelligence, and turn data into decisions.</p>
    <div class="mt-8 flex gap-3">
      <a href="/contact" class="px-5 py-3 rounded-2xl bg-blue-into text-white">Book consult</a>
      <a href="/portfolio" class="px-5 py-3 rounded-2xl bg-[var(--panel)]">View portfolio</a>
    </div>
  </section>

  <section class="max-w-6xl mx-auto px-4 py-8">
    <h2 class="text-xl font-semibold mb-3">Find us</h2>
    <SocialBar />
  </section>

  <CTA title="Get weekly signal—no noise." body="Join the newsletter for concise analytics & case studies." href="#footer-newsletter" cta="Subscribe" />

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
