---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const items = await Astro.glob('../content/portfolio/*.md');
---
<BaseLayout title="Portfolio â€” Cavazos Analytics" description="Investigations, dashboards, and media.">
  <Fragment slot="header"><Header /></Fragment>
  <section class="py-12 grid md:grid-cols-3 gap-6">
    {items.sort((a,b)=> new Date(b.frontmatter.date) - new Date(a.frontmatter.date)).map(({url, frontmatter}) => (
      <a href={url} class="block p-5 rounded-2xl bg-[var(--panel)] hover:opacity-95">
        <h3 class="font-semibold">{frontmatter.title}</h3>
        <p class="text-sm text-[var(--muted)] mt-1">{frontmatter.description}</p>
      </a>
    ))}
  </section>
  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>
